extends layout

block title
    title Calibración

append head
   
prepend page-header
    - var title = "Servicios"
    - var subtitle = "Gestion de los servicios"
    - var breadrumb = ["Testbed", "Calibración"]


block content
    style(type="text/css").
        input{
            color: black;
        }
        label{
            color: white;
        }




    div.page-body
        form
            div.form-group
                label(for='_id') Identificador:
                input#name.form-control(type='text', placeholder='Ej: follow_route...' name='_id' required)
            div.form-group
                label(for='description') Descripcion:
                input#name.form-control(type='text', placeholder='Obtener la ruta mas corta...' name='description' required)
            div.form-group
                label(for='python_version') Version de Python:
                select#name.form-control(name='python_version')
                    option(value = "python2") Python 2
                    option(value = "python3") Python 3
            div.form-group
                label(for='CPU') CPU:
                input#name.form-control(type='number', placeholder='Porcentaje de CPU consumido' name='CPU' required)
            div.form-group
                label(for='MEM') memoria:
                input#name.form-control(type='number', placeholder='Memoria RAM consumida' name='MEM' required)
            div.form-group
                label(for='dependencies') Servicios de los que depende:
                input#name.form-control(type='text', placeholder='Ej: follow_route  gest_semaforos...' name='dependencies')
            div.form-group
                label(for='params') Parametros de Entrada:
                input#name.form-control(type='text', placeholder='Ej: inicio<text> distancia<number>' name='dependencies')
            div.form-group
                label(for='file') Programa del servicio:
                input#name.form-control(type="file" name="file" required)
            div.form-group
                label(for='dependencies_files') Programas de los que depende:
                input#name.form-control(type="file" name="dependencies_files" multiple)
            
            input#name.form-control(type="submit" value="Subir")
                    
            

append scripts
